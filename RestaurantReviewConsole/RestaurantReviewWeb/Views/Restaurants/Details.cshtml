</p>

<ul>
    @foreach(var review in Model.Reviews)
    {
    <li>
        @review.Reviewer
        Rating: @review.Rating
        @Html.ActionLink("Edit", "EditReview", "Reviews", new { id = review.ID }, null) |
        @Html.ActionLink("View", "DisplayReview", "Reviews", new { id = review.ID}, null)
    </li>
    }
</ul>